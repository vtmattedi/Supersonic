      for (var i = 0; i < _args.length; i++) {
        _args2 = _args[i].split('=');
        if (_args2[0] !== "" && _args2[1] !== "") {
      
          if (_args2[0].endsWith(".csv")) {
            FilesCSV[CSVIndex] = _args2;
            CSVIndex++;
          }
          else {
            FilesLog[logIndex] = _args2;
            logIndex++;
          }

        }
      }
      genFileList(FilesCSV, "CSV");
      genFileList(FilesLog, "Log");
    }

