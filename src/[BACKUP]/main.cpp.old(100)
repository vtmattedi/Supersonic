function CurrentRampCreator() {
    this.temp = [];
    this.times = [];
    this.stepsTimeStamps = [];

    this.totalsteps = 0;
    this.start = 0;
    this.heatingStart = 0;
    this.end = 0;
    this.computedEnd = 0;

    this.configured = false;
    this.finished = false;
    this.running = false;
    this.heating = false;
    this.programmedStart = false;
    this.heatUp = false;

